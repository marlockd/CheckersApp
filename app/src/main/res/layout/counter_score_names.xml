<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_counter_second"
    android:layout_width="390dp"
    android:layout_height="74dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:weightSum="9"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/game_counter_first"
    android:background="@drawable/game_counter" >


    <!-- PLAYER 1 SCORE  -->
    <LinearLayout
        android:id="@+id/counter_score_layout1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:layout_weight="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/score_counter_info" >

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/rc_figure_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="14pt"
            android:fontFamily="@font/gerbera_light"
            android:textColor="@color/gray_medium"
            android:text="10"
            android:layout_marginTop="1pt" />

    </LinearLayout>


    <!-- TEXT & PLAYER NAMES -->
    <LinearLayout
        android:id="@+id/score_counter_info"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_weight="5"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textSize="5pt"
            android:fontFamily="@font/gerbera_light"
            android:textColor="@color/rc_blue"
            android:text="SCORE"
            android:letterSpacing="0.24" />

        <View
            android:layout_width="62dp"
            android:layout_height="1px"
            android:background="@color/gray_disabled" />

        <!-- PLAYER NAMES  -->
        <LinearLayout
            android:id="@+id/counter_score_players_layer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="@id/score_counter_info" >

            <TextView
                android:id="@+id/counter_player1_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gerbera_light"
                android:layout_weight="2"
                android:gravity="end|center"
                android:text="Daniel"
                android:textColor="@color/gray_darker"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/counter_players_vs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="6pt"
                android:gravity="center"
                android:fontFamily="@font/gerbera_light"
                android:textColor="@color/gray_darker"
                android:layout_gravity="bottom|center_vertical"
                android:text="@string/counter_versus"
                android:translationY="2dp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp" />

            <TextView
                android:id="@+id/counter_player2_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gerbera_light"
                android:layout_weight="2"
                android:gravity="start|center"
                android:text="George"
                android:textColor="@color/gray_darker"
                android:textSize="7pt" />

        </LinearLayout>

    </LinearLayout>


    <!-- PLAYER 2 SCORE -->
    <LinearLayout
        android:id="@+id/counter_score_layout2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_weight="2"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="@id/score_counter_info" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:textSize="14pt"
            android:fontFamily="@font/gerbera_light"
            android:textColor="@color/gray_medium"
            android:text="10"
            android:layout_marginTop="1pt" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="14dp"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/rc_figure_orange" />

    </LinearLayout>

</LinearLayout>