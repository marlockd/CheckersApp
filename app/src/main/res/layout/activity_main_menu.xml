<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/s1_git_icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_github" />

    <TextView
        android:id="@+id/s1_git_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/gerbera_light"
        android:text="@string/myGit"
        android:textColor="@color/rc_blue"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/s1_git_icon"
        app:layout_constraintTop_toTopOf="parent" />


    <com.andrognito.kerningview.KerningTextView
        android:id="@+id/s1_logo_russian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/gerbera_bold"
        android:text="@string/russianCaps"
        android:textColor="@color/gray_dark"
        android:textSize="54sp"
        app:kv_spacing="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s1_git_icon" />

    <TextView
        android:id="@+id/s1_logo_checkers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="-4sp"
        android:fontFamily="@font/gerbera_light"
        android:text="@string/russianGame"
        android:textColor="@color/gray_dark"

        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s1_logo_russian" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="290dp"
        android:layout_marginTop="128dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s1rc_queen_cropped" />



    <Button
        android:id="@+id/button2"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:background="@drawable/rc_play_btn"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/gerbera_light"
        android:text="@string/play"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="320dp"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/gerbera_light"
        android:text="@string/game_rules"
        android:textColor="@color/rc_blue"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="156dp"
        android:fontFamily="@font/gerbera_light"
        android:text="@string/info"
        android:textColor="@color/rc_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>